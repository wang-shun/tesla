<resources>
    <declare-styleable name="CustomTitleView">
        <!--左侧返回文本-->
        <attr name="leftText" format="string" />
        <attr name="leftTextVisible" format="boolean"/>
        <attr name="leftTextSize" format="dimension"/>
        <attr name="leftTextColor" format="color"/>

        <!--中间标题-->
        <attr name="titleText" format="string"/>
        <attr name="titleSize" format="dimension"/>
        <attr name="titleColor" format="color"/>

        <!--右侧第一个文本-->
        <attr name="rightLText" format="string"/>
        <attr name="rightLTextSize" format="dimension"/>
        <attr name="rightLTextColor" format="color"/>
        <attr name="rightLTextVisible" format="boolean"/>

        <!--右侧第二个文本-->
        <attr name="rightText" format="string"/>
        <attr name="rightTextSize" format="dimension"/>
        <attr name="rightTextColor" format="color"/>
        <attr name="rightTextVisible" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="CheckText">
        <attr name="textSize" format="float"/>
        <attr name="setHeight" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SegmentedControlView">
        <attr name="segRadius" format="dimension|reference"/>
        <attr name="segOuterColor" format="color"/>
        <attr name="segItemColor" format="color"/>
        <attr name="segTextColor" format="color"/>
        <attr name="segSelectedTextColor" format="color"/>
        <attr name="segMarginLeft" format="dimension|reference"/>
        <attr name="segMarginTop" format="dimension|reference"/>
        <attr name="segSelectedItem" format="integer"/>
        <attr name="segTextSize" format="reference"/>
        <attr name="segScrollEnable" format="boolean"/>
        <attr name="segMode" format="enum">
            <enum name="Round" value="0"/>
            <enum name="Circle" value="1"/>
        </attr>
    </declare-styleable>
</resources>
