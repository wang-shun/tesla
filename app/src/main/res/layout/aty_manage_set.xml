<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dishkind_bg_gray"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rel_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp60"
            android:background="@color/transform"
            android:paddingLeft="10dip"
            android:paddingRight="10dp"
            >

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/img_main_title_back"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_back"
                android:background="@color/transparent"
                android:paddingTop="1dp"
                android:text="@string/common_back"
                android:textColor="@color/black"
                android:textSize="@dimen/str_defaul_24"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/setting"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp25" />
    </RelativeLayout>

    <View style="@style/sty_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/dishkind_bg_gray">

            <TextView
                android:id="@+id/about_set"
                style="@style/check_out_text"
                android:background="@drawable/layout_selector_blue"
                android:paddingLeft="@dimen/item_spacing15"
                android:padding="@dimen/dp8"
                android:textSize="@dimen/sp25"
                android:textColor="@color/black_font_selector"
                android:text="@string/about_cloud_pos" />

            <View style="@style/sty_line" />
            <!--外卖配送费-->
            <TextView
                android:id="@+id/my_store"
                style="@style/check_out_text"
                android:background="@drawable/layout_selector_blue"
                android:paddingLeft="@dimen/item_spacing15"
                android:textSize="@dimen/sp25"
                android:padding="@dimen/dp8"
                android:textColor="@color/black_font_selector"
                android:text="@string/my_restaurant" />

            <View style="@style/sty_line" />
            <TextView
                android:id="@+id/print_kds"
                style="@style/check_out_text"
                android:background="@drawable/layout_selector_blue"
                android:paddingLeft="@dimen/item_spacing15"
                android:padding="@dimen/dp8"
                android:textSize="@dimen/sp25"
                android:textColor="@color/black_font_selector"
                android:text="@string/printer_and_Kds" />

            <View style="@style/sty_line" />


            <TextView
                android:id="@+id/senior_set"
                style="@style/check_out_text"
                android:background="@drawable/layout_selector_blue"
                android:paddingLeft="@dimen/item_spacing15"
                android:padding="@dimen/dp8"
                android:textSize="@dimen/sp25"
                android:textColor="@color/black_font_selector"
                android:text="@string/senior_setting" />

            <View style="@style/sty_line" />
            <TextView
                android:id="@+id/scan_set"
                style="@style/check_out_text"
                android:background="@drawable/layout_selector_blue"
                android:paddingLeft="@dimen/item_spacing15"
                android:textSize="@dimen/sp25"
                android:padding="@dimen/dp8"
                android:textColor="@color/black_font_selector"
                android:text="@string/scan_code_setting" />

            <View style="@style/sty_line" />
            <TextView
                android:id="@+id/language_set"
                style="@style/check_out_text"
                android:background="@drawable/layout_selector_blue"
                android:paddingLeft="@dimen/item_spacing15"
                android:textSize="@dimen/sp25"
                android:padding="@dimen/dp8"
                android:textColor="@color/black_font_selector"
                android:text="@string/language_setting" />

            <View style="@style/sty_line" />

            <TextView
                android:id="@+id/table_set"
                style="@style/check_out_text"
                android:visibility="gone"
                android:background="@drawable/layout_selector_blue"
                android:paddingLeft="@dimen/item_spacing15"
                android:padding="@dimen/dp8"
                android:textSize="@dimen/sp25"
                android:textColor="@color/black_font_selector"
                android:text="@string/table" />
            <View style="@style/sty_line"  android:visibility="gone"/>
            <TextView
                android:id="@+id/help_set"
                style="@style/check_out_text"
                android:visibility="gone"
                android:textSize="@dimen/sp25"
                android:padding="@dimen/dp8"
                android:background="@drawable/layout_selector_blue"
                android:paddingLeft="@dimen/item_spacing15"
                android:textColor="@color/black_font_selector"
                android:text="@string/help" />

            <View style="@style/sty_line"  android:visibility="gone"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/set_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

        </FrameLayout>
    </LinearLayout>
</LinearLayout>