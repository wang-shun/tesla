<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

<RelativeLayout
    android:id="@+id/ad_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ad_bgcolor_selector"
    >
    <ImageView
        android:id="@+id/img_src"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/item_spacing50"
        android:padding="@dimen/item_spacing1"
        android:scaleType="fitXY" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_spacing50"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/item_spacing20"
        android:paddingRight="@dimen/item_spacing20">
        <TextView
            android:id="@+id/file_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="广告图片"
            android:textColor="@color/order_day_font_darkgray"
            android:textSize="@dimen/str_defaul_15" />
        <ImageView
            android:id="@+id/select_icon"
            android:layout_width="@dimen/item_spacing30"
            android:layout_height="@dimen/item_spacing30"
            android:src="@drawable/ad_selector" />
    </LinearLayout>
</RelativeLayout>

</LinearLayout>