<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border">

    <cn.acewill.pos.next.widget.CircleProgressView
        android:id="@+id/progressView"
        android:layout_width="@dimen/item_spacing150"
        android:layout_height="@dimen/item_spacing150"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/item_spacing15"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/item_spacing15"
        android:layout_marginBottom="@dimen/item_spacing20"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myLoading" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updating_please"
            android:textSize="@dimen/str_defaul_15"
            android:textColor="@color/login_gray"
            android:layout_marginLeft="@dimen/item_spacing5"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>