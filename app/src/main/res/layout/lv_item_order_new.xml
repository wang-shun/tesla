<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rel_conver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                >
    <TextView
        android:id="@+id/tv_dishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/item_spacing15"
        android:text="@string/ct_cp"
        android:layout_toRightOf="@+id/tv_count"
        android:textColor="@color/black"
        android:textSize="@dimen/str_defaul_18"/>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/dp5"
        android:paddingRight="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:paddingBottom="@dimen/dp5"
        android:text="1"
        android:textColor="@color/black"
        android:background="@drawable/border_black"
        android:textSize="@dimen/str_defaul_18"/>


    <TextView
        android:id="@+id/tv_disCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:visibility="gone"
        android:padding="@dimen/item_spacing15"
        android:layout_toRightOf="@+id/tv_count"
        android:textColor="@color/login_gray"
        android:text="11111111"
        android:layout_below="@+id/tv_dishName"
        android:textSize="@dimen/str_defaul_18"
        />
    <TextView
        android:id="@+id/tv_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_toRightOf="@+id/tv_count"
        android:visibility="gone"
        android:padding="@dimen/item_spacing15"
        android:textColor="@color/login_gray"
        android:text="11111111"
        android:layout_below="@+id/tv_dishName"
        android:textSize="@dimen/str_defaul_18"
        />

    <cn.acewill.pos.next.widget.ScrolListView
        android:id="@+id/lv_dish_package_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@color/line_gray"
        android:dividerHeight="1dip"
        android:visibility="gone"
        android:layout_below="@+id/tv_option"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:transcriptMode="normal"
        />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="@dimen/item_spacing100"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/bbutton_info_dish_item"
        android:gravity="center"
        android:fitsSystemWindows="true"
        android:padding="@dimen/item_spacing15"
        android:text="22.00"
        android:textColor="@color/white"
        android:textSize="@dimen/str_defaul_18"/>


</RelativeLayout>
