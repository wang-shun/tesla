<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_white"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cash_title"
            style="@style/base_width_match"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:background="#21292C"
            android:gravity="center"
            android:text="@string/common_please_choise"
            android:textColor="@color/common_white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/common_alldemo_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/text_little_padding" >

            <Button
                android:id="@+id/query_convert_table"
                style="@style/base_width_match"
                android:background="@mipmap/btn_green"
                android:padding="@dimen/text_little_padding"
                android:text="@string/common_covert_table"
                android:textColor="@color/common_white" />

            <Button
                android:id="@+id/query_merge_table"
                style="@style/base_width_match"
                android:layout_marginTop="@dimen/text_little_padding"
                android:background="@mipmap/btn_green"
                android:padding="@dimen/text_little_padding"
                android:text="@string/common_add_table"
                android:textColor="@color/common_white" />
            <Button
                android:id="@+id/query_clean_table"
                style="@style/base_width_match"
                android:layout_marginTop="@dimen/text_little_padding"
                android:background="@mipmap/btn_green"
                android:padding="@dimen/text_little_padding"
                android:text="@string/text_clean_table"
                android:textColor="@color/common_white" />

            <Button
                android:id="@+id/query_append_order"
                style="@style/base_width_match"
                android:layout_marginTop="@dimen/text_little_padding"
                android:background="@mipmap/btn_orange"
                android:gravity="center"
                android:padding="@dimen/text_little_padding"
                android:text="@string/common_add_deliv"
                android:textColor="@color/common_white" />

            <Button
                android:id="@+id/query_update_info"
                style="@style/base_width_match"
                android:layout_marginTop="@dimen/text_little_padding"
                android:background="@mipmap/btn_orange"
                android:gravity="center"
                android:padding="@dimen/text_little_padding"
                android:text="@string/common_update_tableinfo"
                android:textColor="@color/common_white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>