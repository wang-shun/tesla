<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp50"
              android:orientation="horizontal"
              android:background="@color/white">

    <TextView
        android:id="@+id/tv_orderId"
        style="@style/staff_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center_vertical"
        android:text="xx"/>

    <TextView
        android:id="@+id/tv_receiptsType"
        style="@style/staff_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:text="192.168.0.1"/>

    <TextView
        android:id="@+id/tv_associatedInfo"
        style="@style/staff_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_print_time"
        style="@style/staff_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:text="2017.06.14"/>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="0.7"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_state"
            android:layout_width="@dimen/dp40"
            android:src="@mipmap/img_state_ok"
            android:visibility="gone"
            android:layout_height="@dimen/dp40"/>

        <TextView
            android:id="@+id/tv_wating"
            android:layout_width="wrap_content"
            android:text="@string/waiting_for_detection"
            android:textSize="@dimen/sp20"
            android:textColor="@color/black_gv_title"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>
