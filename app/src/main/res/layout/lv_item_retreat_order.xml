<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
    <Button
        android:id="@+id/btn_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/item_spacing8"
        android:visibility="invisible"
        android:background="@mipmap/img_order_add"
        />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/item_spacing15"
        android:text="1"
        android:textColor="@color/app_text_color"
        android:textSize="@dimen/str_defaul_18"/>
    <Button
        android:id="@+id/btn_minus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_toLeftOf="@+id/tv_count"
        android:layout_marginLeft="@dimen/item_spacing8"
        android:background="@mipmap/img_order_minus"
        />

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:background="@drawable/ad_unselect"
        android:layout_margin="@dimen/dp10"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_dishName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/img_select"
        android:layout_toLeftOf="@+id/tv_count"
        android:padding="@dimen/item_spacing15"
        android:text="11111"
        android:textColor="@color/app_text_color"
        android:textSize="@dimen/str_defaul_18"
       />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp10"
        android:padding="@dimen/item_spacing15"
        android:text="1"
        android:textColor="@color/app_text_color"
        android:textSize="@dimen/str_defaul_18"/>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="@dimen/dp20"
        android:layout_below="@+id/tv_dishName"
        android:text="11111"
        android:visibility="gone"
        android:textColor="@color/red"
        android:textSize="@dimen/str_defaul_16"
        />

</RelativeLayout>
