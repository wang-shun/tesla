<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/bg_commont_color"
        >
        <TextView
            android:id="@+id/scan_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp15"
            android:textColor="@color/gray_search_text"
            android:layout_centerInParent="true"
            android:text=""/>
    </RelativeLayout>


    <View
        style="@style/sty_line"/>

    <ImageView
        android:id="@+id/scan_code_iv"
        android:layout_width="@dimen/dp270"
        android:layout_height="@dimen/dp270"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp15"
        />
    <LinearLayout
        android:id="@+id/retry_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/creat"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:text="已支付"
            android:gravity="center"
            android:textSize="@dimen/sp14"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:background="@drawable/btn_selector_blue"
            />
        <TextView
            android:id="@+id/retry"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:text="@string/close"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/sp14"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:background="@drawable/btn_selector_blue"
            />
    </LinearLayout>


</LinearLayout>