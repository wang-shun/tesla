<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <LinearLayout
        android:id="@+id/layoutOpScalUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
         
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             
            android:text="scale_version"
            android:textSize="30dip"
        android:layout_weight="1" />

        <TextView
            android:id="@+id/text_opver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30dip"
        android:layout_weight="1" />
        
        <TextView
            android:id="@+id/text_m3ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30dip"
        android:layout_weight="1" />
        
        </LinearLayout>
        
        <Button
            android:id="@+id/btn_upgrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="5"
            android:text="scale_upgrade" 
            android:onClick="onButtonClick" />

        </LinearLayout>

     <LinearLayout
        android:id="@+id/layoutPrintOpScal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
         >
        
         
    	<Spinner
    	    android:id="@+id/spinnerUsbOpScal"
    	    android:layout_width="0dp"
    	    android:layout_height="50dip"
    	    android:layout_weight="1"
    	    android:textSize="5dip" />

        <Button
            android:id="@+id/btn_changeOpScal"
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Confirm" />

        </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chb_zero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:text="scale_zero" />

        <CheckBox
            android:id="@+id/chb_tare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:text="scale_tare" />

        <CheckBox
            android:id="@+id/chb_stable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:text="scale_stable" />
    </LinearLayout>

     <GridLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:columnCount="2"
         android:rowCount="3" >

         <TextView
             android:id="@+id/tvnetWeight"
             android:layout_column="0"
             android:layout_gravity="left|center_vertical"
             android:layout_row="0"
             android:text="scale_netweight" />

         <TextView
             android:id="@+id/netWeight"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_column="1"
             android:layout_gravity="right"
             android:layout_row="0"
             android:gravity="right|center_horizontal"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:textSize="40sp" />

         <TextView
             android:layout_column="0"
             android:layout_gravity="left|center_vertical"
             android:layout_row="1"
             android:text="scale_tareweight" />
         
         <TextView
             android:id="@+id/tareWeight"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_column="1"
             android:layout_gravity="right"
             android:layout_row="1"
             android:gravity="right|center_horizontal"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:textSize="40sp" />

         <TextView
             android:layout_column="0"
             android:layout_gravity="left|center_vertical"
             android:layout_row="2"
             android:text="scale_grossweight" />
         
        <TextView
             android:id="@+id/grossWeight"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_column="1"
             android:layout_gravity="right"
             android:layout_row="2"
             android:gravity="right|center_horizontal"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:textSize="40sp" />

     </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_zero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="scale_zero" />

        <Button
            android:id="@+id/btn_tare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="scale_tare" />
    </LinearLayout>

</LinearLayout>