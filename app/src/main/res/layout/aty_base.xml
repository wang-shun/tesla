<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/contentRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_title"
        android:background="@color/transparent"
        android:orientation="vertical">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/common_white2"
        android:gravity="center_vertical"
        android:padding="@dimen/item_spacing10">

        <RelativeLayout
            android:id="@+id/rel_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/transform"
            android:paddingLeft="10dip"
            android:paddingRight="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/img_main_title_back"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_back"
                android:background="@color/transparent"
                android:paddingTop="1dp"
                android:text="@string/common_back"
                android:textColor="@color/black"
                android:textSize="@dimen/str_defaul_24"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_spacing20"
            android:layout_marginRight="@dimen/item_spacing20"
            android:background="@mipmap/app_icon"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/str_defaul_30"/>


        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/item_spacing20"
            android:padding="@dimen/item_spacing10"
            android:text="@string/title_activity_login"
            android:textColor="@color/black"
            android:textSize="@dimen/str_defaul_22"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_rightIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/item_spacing20"
            android:background="@mipmap/img_icon"
            android:visibility="gone"/>


    </RelativeLayout>
</RelativeLayout>
