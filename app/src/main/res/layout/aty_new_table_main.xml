        <TextView
            android:id="@+id/tv_mainSelect"
            style="@style/table_title_white"
            android:layout_marginRight="@dimen/item_spacing10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:drawableLeft="@mipmap/img_order_select"
            android:paddingLeft="@dimen/item_spacing10"
            android:text="@string/sth_home_main_select"/>

        <TextView
            android:id="@+id/tv_checkBox"
            style="@style/table_title_white"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/item_spacing30"
            android:layout_toLeftOf="@+id/tv_mainSelect"
            android:gravity="center"
            android:drawableLeft="@mipmap/img_order_moneybox"
            android:paddingLeft="@dimen/item_spacing10"
            android:text="@string/sth_home_check_box"/>

        <TextView
