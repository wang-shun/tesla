<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_main_bg_gray"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp55"
        android:layout_alignParentTop="true"
        android:background="@color/title_bg">

        <TextView
            android:id="@+id/tv_user"
            style="@style/table_title_white"
            android:drawableLeft="@mipmap/img_order_user"
            android:paddingLeft="@dimen/item_spacing15"
            android:text="@string/sth_home_user"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_order"
            style="@style/table_title_white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_user"
            android:drawableLeft="@mipmap/img_order_order"
            android:gravity="center"
            android:paddingLeft="@dimen/item_spacing10"
            android:text="@string/sth_home_order"/>

        <TextView
            android:id="@+id/tv_menu"
            style="@style/table_title_white"
            android:layout_toRightOf="@+id/tv_order"
            android:drawableLeft="@mipmap/img_menu_order"
            android:paddingLeft="@dimen/item_spacing10"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp30"
            android:text="@string/sth_home_dishmenu"/>

        <TextView
        android:id="@+id/tv_showView"
        style="@style/table_title_white"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_menu"
        android:drawableLeft="@mipmap/img_show_view"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp30"
        android:paddingLeft="@dimen/item_spacing10"
        android:text="@string/sth_home_show_view"/>


