<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/border_setting_item_bg"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_spacing50"
        android:background="@color/white_order_title"
        android:layout_margin="@dimen/item_spacing2"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/close_ll"
            android:layout_width="@dimen/item_spacing50"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="@dimen/item_spacing15">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:src="@mipmap/close"/>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/sty_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/item_spacing25"
            android:paddingRight="@dimen/item_spacing25"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wx_login_layout_height"
                    android:layout_marginTop="@dimen/item_spacing10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/wx_login_layout_height"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_service_address"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font"/>

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/login_server"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font"
                            android:background="@drawable/border_layout_bg"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/wx_login_layout_height"
                        android:layout_marginLeft="@dimen/item_spacing10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_service_port2"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font"/>

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/login_port"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:background="@drawable/border_layout_bg"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font"
                            />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_jyj"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wx_login_layout_height"
                    android:layout_marginTop="@dimen/item_spacing10"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/wx_login_layout_height"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_service_address_jyj"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font"/>

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/login_server_jyj"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font"
                            android:background="@drawable/border_layout_bg"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/wx_login_layout_height"
                        android:layout_marginLeft="@dimen/item_spacing10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_service_port2"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font"/>

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/login_port_jyj"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:background="@drawable/border_layout_bg"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font"
                            />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wx_login_layout_height"
                    android:layout_marginTop="@dimen/item_spacing5"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/wx_login_layout_height"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KDS&#12288;地址"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font"/>

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/kds_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:background="@drawable/border_layout_bg"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/wx_login_layout_height"
                        android:layout_marginLeft="@dimen/item_spacing10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KDS端口号"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font"/>

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/kds_port"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:background="@drawable/border_layout_bg"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font"
                            />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wx_login_layout_height"
                    android:layout_marginTop="@dimen/item_spacing5"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商&#12288;&#12288;&#12288;户"
                        android:textColor="@color/gray_search_text"
                        android:textSize="@dimen/wx_scan_font"/>

                    <cn.acewill.pos.next.widget.CommonEditText
                        android:id="@+id/login_merchant"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/item_spacing20"
                        android:background="@drawable/border_layout_bg"
                        android:paddingLeft="@dimen/item_spacing10"
                        android:textColor="@color/gray_search_text"
                        android:textSize="@dimen/wx_scan_font"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wx_login_layout_height"
                    android:layout_marginTop="@dimen/item_spacing5"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="门&#12288;&#12288;&#12288;店"
                        android:textColor="@color/gray_search_text"
                        android:textSize="@dimen/wx_scan_font"/>

                    <cn.acewill.pos.next.widget.CommonEditText
                        android:id="@+id/login_store"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/item_spacing20"
                        android:background="@drawable/border_layout_bg"
                        android:paddingLeft="@dimen/item_spacing10"
                        android:textColor="@color/gray_search_text"
                        android:textSize="@dimen/wx_scan_font"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wx_login_layout_height"
                    android:layout_marginTop="@dimen/item_spacing5"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="品&#12288;&#12288;&#12288;牌"
                        android:textColor="@color/gray_search_text"
                        android:textSize="@dimen/wx_scan_font"/>

                    <cn.acewill.pos.next.widget.CommonEditText
                        android:id="@+id/login_brand"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/item_spacing20"
                        android:background="@drawable/border_layout_bg"
                        android:paddingLeft="@dimen/item_spacing10"
                        android:textColor="@color/gray_search_text"
                        android:textSize="@dimen/wx_scan_font"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wx_login_layout_height"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/item_spacing5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备&#12288;名称"
                        android:textColor="@color/gray_search_text"
                        android:textSize="@dimen/wx_scan_font"/>

                    <cn.acewill.pos.next.widget.CommonEditText
                        android:id="@+id/device_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/item_spacing20"
                        android:background="@drawable/border_layout_bg"
                        android:paddingLeft="@dimen/item_spacing10"
                        android:textColor="@color/gray_search_text"
                        android:textSize="@dimen/wx_scan_font"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_spacing5"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_kit_hine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="是否在厨房单上显示菜品金额"
                        android:textColor="@color/gray_search_text"
                        android:textSize="@dimen/wx_scan_font"/>

                    <CheckBox
                        android:id="@+id/ck_select_kit_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_time_hint"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_spacing20"
                        android:background="@drawable/selector_ck_area"
                        android:button="@android:color/transparent"
                        android:checked="false"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_spacing5"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_netorder_hine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="是否接收网上订单"
                        android:textColor="@color/gray_search_text"
                        android:textSize="@dimen/wx_scan_font"/>

                    <CheckBox
                        android:id="@+id/ck_select_netorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_time_hint"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_spacing20"
                        android:background="@drawable/selector_ck_area"
                        android:button="@android:color/transparent"
                        android:checked="false"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_spacing10"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_dish_style_hine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="菜品显示样式"
                        android:textColor="@color/gray_search_text"
                        android:textSize="@dimen/wx_scan_font"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_dish_style_hine"
                        android:paddingLeft="@dimen/item_spacing20"
                        android:text="默认为纯文本模式,选中则为图文模式"
                        android:textColor="@color/bbutton_danger"
                        android:textSize="@dimen/wx_scan_font"/>

                    <CheckBox
                        android:id="@+id/ck_select_dish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_time_hint"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_spacing20"
                        android:background="@drawable/selector_ck_area"
                        android:button="@android:color/transparent"
                        android:checked="false"/>


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_bindInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_spacing5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_bindInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/bbutton_danger"
                        android:textSize="@dimen/wx_scan_font"/>

                    </RelativeLayout>

                <TextView
                    android:id="@+id/save_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wx_login_layout_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp15"
                    android:background="@drawable/btn_login_selector"
                    android:gravity="center"
                    android:text="@string/setting_save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/wx_login_btn_font"/>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</LinearLayout>