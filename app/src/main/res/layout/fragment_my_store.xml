<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_order_title">
    <TextView
        style="@style/staff_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/dp15"
        android:background="@color/gray_check_sth"
        android:text="@string/store_info"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp10">

        <TextView
            style="@style/staff_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="left|center_vertical"
            android:text="@string/setting_store_id"/>

        <TextView
            android:id="@+id/store_Id"
            style="@style/staff_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="right|center_vertical"
            android:text="dwzd"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp10">

        <TextView
            style="@style/staff_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="left|center_vertical"
            android:text="@string/sth_address"/>

        <TextView
            style="@style/staff_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="right|center_vertical"
            android:text="sz"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp10">

        <TextView
            style="@style/staff_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="left|center_vertical"
            android:text="@string/sth_phone2"/>

        <TextView
            style="@style/staff_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="right|center_vertical"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp10">

        <TextView
            style="@style/staff_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="所属区域"/>

        <TextView
            style="@style/staff_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="华南区"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingTop="@dimen/dp10">

        <TextView
            style="@style/staff_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="微信公众号"/>

        <TextView
            style="@style/staff_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="CLOUDPOS2016"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:visibility="gone"
    android:layout_marginTop="@dimen/dp30"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/wx_two_code"
        android:layout_height="wrap_content"/>
    <TextView
        style="@style/staff_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="点击可更换二维码"/>
</LinearLayout>


</LinearLayout>