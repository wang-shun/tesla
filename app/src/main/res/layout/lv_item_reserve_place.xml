<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_customrerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingTop="@dimen/item_spacing15"
        android:paddingBottom="@dimen/item_spacing15"
        android:gravity="center"
        android:text="预定人"
        android:textColor="@color/order_day_font_darkgray"
        android:textSize="@dimen/str_defaul_20"
        />

    <TextView
        android:id="@+id/tv_repastNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingTop="@dimen/item_spacing15"
        android:paddingBottom="@dimen/item_spacing15"
        android:text="人数"
        android:textColor="@color/order_day_font_darkgray"
        android:textSize="@dimen/str_defaul_20"
        />

    <TextView
        android:id="@+id/tv_tableName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.3"
        android:paddingTop="@dimen/item_spacing15"
        android:paddingBottom="@dimen/item_spacing15"
        android:gravity="center"
        android:text="桌号"
        android:textColor="@color/order_day_font_darkgray"
        android:textSize="@dimen/str_defaul_20"
        />

    <TextView
        android:id="@+id/tv_dateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:paddingTop="@dimen/item_spacing15"
        android:paddingBottom="@dimen/item_spacing15"
        android:text="时间"
        android:textColor="@color/order_day_font_darkgray"
        android:textSize="@dimen/str_defaul_20"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/item_spacing15"
        android:paddingBottom="@dimen/item_spacing15"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_reserve_details"
            />
    </RelativeLayout>


</LinearLayout>
