<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/item_spacing40"
            android:layout_marginTop="@dimen/item_spacing40"
            android:layout_weight="2.2"
            android:background="@drawable/border_layout_bg">

            <TextView
                android:id="@+id/store_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_spacing50"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/item_spacing30"
                android:layout_marginLeft="@dimen/item_spacing20"
                android:layout_marginRight="@dimen/item_spacing15"
                android:layout_marginTop="@dimen/item_spacing30"
                android:background="@drawable/btn_selector_blue"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/str_defaul_16" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/store_save"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/item_spacing15"
                    android:paddingLeft="@dimen/item_spacing20"
                    android:paddingRight="@dimen/item_spacing15"
                    android:paddingTop="@dimen/item_spacing30">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_spacing50"
                        android:layout_marginTop="@dimen/item_spacing15"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地&#12288;址"
                            android:textColor="@color/order_day_font_darkgray"
                            android:textSize="@dimen/str_defaul_16" />

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:background="@drawable/border_layout_bg"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_spacing50"
                        android:layout_marginTop="@dimen/item_spacing15"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电&#12288;话"
                            android:textColor="@color/order_day_font_darkgray"
                            android:textSize="@dimen/str_defaul_16" />

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:background="@drawable/border_layout_bg"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_spacing50"
                        android:layout_marginTop="@dimen/item_spacing15"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="网&#12288;址"
                            android:textColor="@color/order_day_font_darkgray"
                            android:textSize="@dimen/str_defaul_16" />

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/websit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:background="@drawable/border_layout_bg"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_spacing50"
                        android:layout_marginTop="@dimen/item_spacing15"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设置查询离就餐订单时间(分钟)"
                            android:textColor="@color/order_day_font_darkgray"
                            android:textSize="@dimen/str_defaul_16" />

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/preorderTime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:background="@drawable/border_layout_bg"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_spacing50"
                        android:layout_marginTop="@dimen/item_spacing15"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设置自动下单交易限额(元)"
                            android:textColor="@color/order_day_font_darkgray"
                            android:textSize="@dimen/str_defaul_16" />

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/orderTrading"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:background="@drawable/border_layout_bg"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_spacing50"
                        android:layout_marginTop="@dimen/item_spacing15"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KDS服务器地址"
                            android:textColor="@color/order_day_font_darkgray"
                            android:textSize="@dimen/str_defaul_16" />

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/kds_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:background="@drawable/border_layout_bg"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_spacing50"
                        android:layout_marginTop="@dimen/item_spacing15"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KDS端口号"
                            android:textColor="@color/order_day_font_darkgray"
                            android:textSize="@dimen/str_defaul_16" />

                        <cn.acewill.pos.next.widget.CommonEditText
                            android:id="@+id/kds_port"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/item_spacing20"
                            android:background="@drawable/border_layout_bg"
                            android:paddingLeft="@dimen/item_spacing10"
                            android:textColor="@color/gray_search_text"
                            android:textSize="@dimen/wx_scan_font" />
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>


        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>