<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_margin="@dimen/item_spacing15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_spacing50"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/source"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="菜品销售结构"
            android:gravity="center"
            android:textSize="@dimen/str_defaul_18"
            android:textColor="@color/pay_type_colors"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/sales"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="菜品销售"
            android:gravity="center"
            android:textSize="@dimen/str_defaul_18"
            android:textColor="@color/pay_type_colors"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/sales_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="区域销售"
            android:gravity="center"
            android:textSize="@dimen/str_defaul_18"
            android:textColor="@color/pay_type_colors"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/sales_summary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="销售综合统计"
            android:gravity="center"
            android:textSize="@dimen/str_defaul_18"
            android:textColor="@color/pay_type_colors"
            android:textStyle="bold"/>
    </LinearLayout>

    <View style="@style/sty_line"/>

    <WebView
        android:id="@+id/reports_wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>
</LinearLayout>