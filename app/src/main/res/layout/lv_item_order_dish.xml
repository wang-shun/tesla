<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_spacing50"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_spacing15"
        android:paddingRight="@dimen/item_spacing15"
        android:gravity="center">
        <TextView
            android:id="@+id/dish_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ct_cp"
            android:textColor="@color/order_day_font_darkgray"
            android:textSize="@dimen/str_defaul_18"
            />
        <TextView
            android:id="@+id/dish_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sth_dishSum"
            android:gravity="center"
            android:textColor="@color/order_day_font_darkgray"
            android:textSize="@dimen/str_defaul_18"
            />
        <TextView
            android:id="@+id/dish_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sth_dishPrice"
            android:gravity="right"
            android:textColor="@color/order_day_font_darkgray"
            android:textSize="@dimen/str_defaul_18"
            />
        <TextView
            android:id="@+id/dish_gift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sth_dishGift"
            android:gravity="right"
            android:textColor="@color/order_day_font_darkgray"
            android:textSize="@dimen/str_defaul_18"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/dish_bz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sth_note2"
            android:gravity="right"
            android:textColor="@color/order_day_font_darkgray"
            android:textSize="@dimen/str_defaul_18"
            />
    </LinearLayout>
</LinearLayout>