<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/blue"
              android:orientation="horizontal"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/view_store_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <RelativeLayout
            android:id="@+id/rel_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:paddingLeft="@dimen/item_spacing10"
            android:paddingRight="@dimen/item_spacing10"
            >

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/btn_back"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_back"
                android:background="@color/transparent"
                android:paddingTop="1dp"
                android:paddingLeft="@dimen/item_spacing5"
                android:text="@string/common_back"
                android:textColor="@color/white"
                android:textSize="@dimen/str_defaul_24"/>
        </RelativeLayout>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12.1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="@string/modify_pw"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp20"
                        android:scaleY="0.95"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp20"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:layout_height="@dimen/dp0.5"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_login"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <!--密码-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp55"
                    android:background="@drawable/border_main_white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="@dimen/dp20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp15"
                        android:background="@drawable/login_main_pw"
                        />
                    <cn.acewill.pos.next.widget.CommonEditText
                        android:id="@+id/login_old_pw_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="@string/input_old_password"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/item_spacing10"
                        android:textSize="@dimen/wx_scan_font"/>
                </LinearLayout>

                <!--密码-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp55"
                    android:background="@drawable/border_main_white"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/dp20"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp15"
                        android:background="@drawable/login_main_pw"
                        />
                    <cn.acewill.pos.next.widget.CommonEditText
                        android:id="@+id/login_new_1_pw_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="@string/input_new_password"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/item_spacing10"
                        android:textSize="@dimen/wx_scan_font"/>
                </LinearLayout>

                <!--密码-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp55"
                    android:background="@drawable/border_main_white"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/dp20"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp15"
                        android:background="@drawable/login_main_pw"
                        />
                    <cn.acewill.pos.next.widget.CommonEditText
                        android:id="@+id/login_new_2_pw_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="@string/input_new_password_again"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/item_spacing10"
                        android:textSize="@dimen/wx_scan_font"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_modify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_selector_gray"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp20"
                    android:text="@string/modify_pw"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/wx_login_btn_font"/>
            </LinearLayout>



        </LinearLayout>



        <TextView
            android:id="@+id/dish_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.3"
            android:scaleY="0.98"
            android:gravity="center"
            android:visibility="invisible"
            android:text="@string/menu"
            android:textColor="@color/white"
            android:textSize="@dimen/wx_login_top_font"
            />


    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"/>

</LinearLayout>
